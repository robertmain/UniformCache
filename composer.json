{
    "name": "robertmain/uniformcache",
    "description": "A universal cache for PHP which aims to provide a modularsible and perhaps most importantly consistent interface to as many caching solutions as possible in PHP.",
    "license": "GPLv3",
    "authors": [
        {
            "name": "Robert Main"
        }
    ],
    "scripts":{
        "test": "phpunit",
        "test:coverage-clover": "@composer test --  --coverage-clover tests/unit/coverage/coverage.xml",
        "test:coverage-text": "@composer test --  --coverage-text",
        "test:coverage-html": "@composer test -- --coverage-html tests/unit/coverage",
        "docs": "phpdoc"
    },
    "require": {
        "php": "^5.6",
        "simplon/mysql": "0.3.2"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "^2.9",
        "phpunit/phpunit": "5.7.26",
        "diablomedia/phpunit-pretty-printer": "^1.0",
        "phpunit/php-code-coverage": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "UniformCache\\": "src"
        }
    }
}
